<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="60dp"
    android:descendantFocusability="blocksDescendants"
    android:elevation="1dp">

    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/displayRouteRowLayoutTextViewRouteNumber"
        android:text="Route #"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/displayRouteRowLayoutTextViewDirection"
        android:text="Direction"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_toRightOf="@+id/displayRouteRowLayoutTextViewRouteNumber"
        android:layout_alignBottom="@+id/displayRouteRowLayoutTextViewRouteNumber"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>